@model CalculatorTest2.Models.CalculatorItems
@{
    ViewBag.Title = "Index";
}

<html>
<head></head>
<body>
    <h2>Simple Calculator</h2>
    <div class="row">
        @using (Html.BeginForm("Index", "Calculator", FormMethod.Post))
        {
            <div class="form-group">
                <label for="num1">First Number</label>
                <input type="text" class="form-control" id="num1" name="num1" value="@Model.num1" />
            </div>
            <div class="form-group">
                <label for="num2">Second Number</label>
                <input type="text" class="form-control" id="num2" name="num2" value="@Model.num2" />
            </div>
            <div class="form-group">
                <label for="result">Result</label>
                <input type="text" class="form-control" id="res" name="res" value="@Model.Result" />
            </div>
            <button type="submit" class="btn btn-info" id="add" value="add" name="calculate">+</button>
            <button type="submit" class="btn btn-danger" id="subtract" value="subtract" name="calculate">-</button>
            <button type="submit" class="btn btn-warning" id="multiply" value="multiply" name="calculate">*</button>
            <button type="submit" class="btn btn-default" id="divide" value="divide" name="calculate">/</button>
        }
    </div>
</body>
</html>

